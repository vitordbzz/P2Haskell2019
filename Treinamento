getListTreinamentoR :: Handler Html
getListTreinamentoR = do 
    treinamentos <- runDB $ selectList [] [Asc TreinamentoNome]
    defaultLayout $(whamletFile "templates/treinamento.hamlet")

getPerfilTreinamentoR :: TreinamentoId -> Handler Html
getPerfilTreinamentoR treid = do 
    treinamento <- runDB $ get404 treid
    defaultLayout $ do
        addStylesheet $ StaticR css_bootstrap_css
        toWidget [lucius|
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
        |]
        [whamlet|
            <div>
                Nome do Treinamento: #{treinamentoNome treinamento}
            <div>
                Sigla: #{treinamentoSigla treinamento}
            <div>
                Carga Horaria: 
        |]

postApagarTreinamentoR :: TreinamentoId -> Handler Html
postApagarTreinamentoR treid = do
    runDB $ get404 treid
    runDB $ delete treid
    redirect ListTreinamentoR