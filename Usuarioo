postUsuarioR :: Handler Html
postUsuarioR = do
    ((res,_),_) <- runFormPost formUsuario
    case res of
        FormSuccess (usuario,confirmacao) -> do
            if (usuarioSenha usuario) == confirmacao then do 
                runDB $ insert usuario
                redirect HomeR
            else do
                setMessage [shamlet|
                    <h1>
                        Usuario e senha n batem
                |]
                redirect UsuarioR
        _ -> redirect HomeR
    