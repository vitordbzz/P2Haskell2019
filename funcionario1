getPerfilFuncionarioR :: FuncionarioId -> Handler Html
getPerfilFuncionarioR funcid = do 
    funcionario <- runDB $ get404 funcid
    defaultLayout $ do 
        [whamlet|
            <h1>
                Nome do Funcionario: #{funcionarioNome funcionario}
        |]

postApagarFuncionarioR :: FuncionarioId -> Handler Html
postApagarFuncionarioR funcid = do
    runDB $ get404 funcid
    runDB $ delete funcid
    redirect ListFuncionarioR