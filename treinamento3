getAlterarTreinamentoR :: TreinamentoId -> Handler Html
getAlterarTreinamentoR treid = do
    treinamento <- runDB $ get404 treid
    (widget,enctype) <- generateFormPost (formTreinamento $ Just treinamento)
    defaultLayout $ do
        addStylesheet $ StaticR css_bootstrap_css
        toWidget [lucius|
            body {
                padding-top: 20px;
                padding-left: 15px;
                padding-right: 15px;
                padding-bottom: 40px;
            }
            btn btn-primary{
                font-weight:bolder;
                padding-left: 20px;
                
            }
        |]
        [whamlet|
            <form action=@{AlterarTreinamentoR treid} method=post>
                ^{widget}
                <input type="submit" class="btn btn-primary" value="Atualizar dados">
        |]

postAlterarTreinamentoR :: TreinamentoId -> Handler Html
postAlterarTreinamentoR treid = do
    treinamento <- runDB $ get404 treid
    -- LE DO FORM
    ((res,_),_) <- runFormPost (formTreinamento $ Just treinamento) 
    case res of
        FormSuccess treinamentoNovo -> do
            runDB $ replace treid treinamentoNovo
            redirect ListTreinamentoR
        _ -> redirect HomeR